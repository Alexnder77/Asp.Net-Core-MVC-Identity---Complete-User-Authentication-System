    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" id="model.Name" asp-for=Name required />
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <input type="text" id="model.Description" asp-for=Description />
    </div>
    <div class="form-group">
        <label for="Category">Category:</label>
        <input type="text" id="model.Category" asp-for=Category />
    </div>
    <div class="form-group">
        <label for="Price">Price:</label>
        <input type="number" id="model.Price" asp-for=Price required />
    </div>

    <input type="hidden" id="UserName" name="UserName" value="@User.Identity.Name" />
   
    <div class="form-group">
        <button type="submit">Upload Ad with Image</button>
    </div>
</form>
