
@using Microsoft.AspNetCore.Identity
@using AuthSystem.Areas.Identity.Data

@model NotBlocket2.Models.Ad


@{
    ViewData["Title"] = "CreateAd";
}
<h3>Create Ad</h3>

@ViewBag.error



<form asp-controller="NotBlocket" asp-action="CreateAd" method="post" enctype="multipart/form-data">
    @*
    <div class="form-group">
        <label for="File">Choose Image:</label>
