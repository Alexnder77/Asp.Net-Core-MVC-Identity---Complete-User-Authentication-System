@model IEnumerable<NotBlocket2.Models.Profile>

@{
    ViewData["Title"] = "Profiles";
}

<h1>Profiles</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location_Id)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location_Id)
                </td>

                <td>
                  <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Editprofile", "NotBlocket", new { id = item.Id })'">Edit</button>
          
                  <button type="button" class="btn btn-danger" onclick="if (confirm('Are you sure you want to delete this profile?')) { location.href='@Url.Action("Deleteprofile", "NotBlocket", new { id = item.Id })' }">Delete</button>

                </td>
            </tr>
        }
    </tbody>

</table>


<p>    eventuellt felmeddelande:  @ViewBag.error </p>