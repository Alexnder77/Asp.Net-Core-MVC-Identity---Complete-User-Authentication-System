@using Newtonsoft.Json;
@using Newtonsoft.Json.Serialization;
@using System.Text.Json

@{
    ViewData["Title"] = "Start Page";
}

<div class="text-center">
    <h4 class="display-4">Welcome to NotBlocket</h4>
</div>


<form action="NotBlocket/SearchResults" method="get">
    <div class="form-group">
        <input type="text" class="form-control" name="search" placeholder="Search">
    </div>

    <div class="text-center">
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>


<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>

<canvas id="myChart" width="400" height="100"></canvas>

<script>
    var locationNames = @Html.Raw(Json.Serialize(@ViewBag.LocationNames));
    var profileCounts = @Html.Raw(Json.Serialize(@ViewBag.ProfileCountPerLocation));
</script>

<script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: locationNames,
        datasets: [{
            label: 'Users per location',
                data: profileCounts,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
</script>

